[user]
	name = hotline-emu
	email = redacted@redacted
[core]
	excludesfile = /home/hotline-emu/.gitignore_global
	editor = vim
[alias]
	st = status
	rh = reset --hard
	rs = reset --soft HEAD~1
	bd = branch -D
  b = branch -v
  cb = checkout -b
	rv = remote -v
	ds = diff --stat --color
	fa = fetch --all
	c = checkout
	rev = rebase -v
	cm = commit -m
	review = !sh -c 'git fetch $1 pull/$2/head:$3 && git checkout $3' -
[color]
	ui = true
[pager]
	diff = false
	branch = false
