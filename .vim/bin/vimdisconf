#!/bin/bash

config_enabled_dir="$HOME/.vim/config-enabled"
config_available_dir="../config-available"

cd "${config_enabled_dir}"

if [[ -z "$1" ]]; then
    echo "Usage: vimdisconf <configuration name>"
    exit 0
fi

plugin="${config_available_dir}/${1}.vim"
target="${config_enabled_dir}/${1}.vim"

if [[ ! -e "${plugin}" ]]; then
    echo "Plugin not found"
    exit 1
fi

if [[ ! -h "${target}" ]]; then
    echo "Plugin is already disabled"
    exit 1
fi

rm "${target}"
